{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "outDir": "<%= buildDir %>",
      <% if (ssml === 'tsx') { %>"jsx": "react",<% } %>
      "allowJs": false
    },
    "include": [
        "./src/**/*"
    ]
  }